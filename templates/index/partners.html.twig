{% extends 'base.html.twig' %}

{% block title %}
  Nos Partenaires
{% endblock %}

{% block body %}
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-center mb-12">Nos Partenaires</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for company in companies %}
        <div class="bg-white shadow-lg rounded-2xl p-6 hover:shadow-xl transition duration-300">
          <div class="mb-4">
            <h2 class="text-xl font-bold text-gray-800 mb-1">{{ company.name }}</h2>
            <p class="text-sm text-gray-500">
              Description :
              <span class="font-medium text-gray-700">{{ company.description }}</span>
            </p>
          </div>
          <div class="text-sm text-gray-600 space-y-1">
            <p>
              <strong>Téléphone :</strong> {{ company.phoneNumber }}
            </p>
            <p>
              <strong>Site web :</strong> <a href="{{ company.website }}" target="_blank" class="text-indigo-600 hover:text-indigo-700">{{ company.website }}</a>
            </p>
          </div>

          <h3 class="mt-6 text-lg font-semibold text-gray-800">Offres d'emploi :</h3>
          {% if (company.jobOffer|length) > 0 %}
            <ul class="mt-2 space-y-1">
              {% for offer in company.jobOffer %}
                <li class="text-sm text-gray-600">{{ offer.title }}</li> {# Remplace `title` par la propriété de ton objet JobOffer que tu veux afficher #}
              {% endfor %}
            </ul>
          {% else %}
            <p class="mt-2 text-sm text-gray-500">Aucune offre d'emploi disponible.</p>
          {% endif %}
        </div>
      {% else %}
        <p class="col-span-3 text-center text-gray-500">Aucune entreprise partenaire trouvée.</p>
      {% endfor %}
    </div>
  </div>
{% endblock %}
